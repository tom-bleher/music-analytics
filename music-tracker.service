[Unit]
Description=Music Tracker - MPRIS listening history daemon
Documentation=https://github.com/your/music-analytics
After=graphical-session.target

[Service]
Type=simple
ExecStart=/home/tom/.local/share/music-analytics/venv/bin/python /home/tom/.local/share/music-analytics/music_tracker.py
Restart=on-failure
RestartSec=5

# Environment
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=default.target
